<?xml version="1.0" encoding="utf-8"?>
<jxhl xmlns="http://halo-studio.com/jxhl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://halo-studio.com/jxhl ../js/jxhl.xsd">
    <html dock="fill" css_name="app-scroll">
        <div class="container">
            <div class="form">
                <div class="form-group">
                    <h2>登录</h2>
                </div>
                <div class="form-group">
                    <input local_var="txt_mobile" type="text" class="form-control" placeholder="手机或用户名"/>
                </div>
                <div class="form-group">
                    <input local_var="txt_pwd" type="password" class="form-control" placeholder="密码"/>
                </div>
                <div class="form-group">
                    <button local_var="btn_signin" type="button" class="btn btn-primary">登录</button>
                </div>
                <div class="form-group">
                    <button local_var="btn_signup" type="button" class="btn btn-brightgreen">还没有账号</button>
                </div>
                <div class="form-group text-center" local-id="div-msg"></div>
            </div>
        </div>
    </html>
    <runnable>
        <![CDATA[
            require(['pages/signin'], function(a){
                a.init(jxhl$container, jxhl$arguments, jxhl$localVars);
            });
        ]]>
    </runnable>
</jxhl>