<?xml version="1.0" encoding="utf-8"?>
<jxhl xmlns="http://halo-studio.com/jxhl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://halo-studio.com/jxhl ../js/jxhl.xsd">
    <html dock="fill" css_name="app-scroll">
        <div class="container">
            <div class="form">
                <div class="form-group">
                    <h2>注册</h2>
                </div>
                <div class="form-group">
                    <input local_var="txt_username" type="text" class="form-control" placeholder="用户名"/>
                </div>
                <div class="form-group">
                    <input local_var="txt_mobile" type="text" class="form-control" placeholder="手机"/>
                </div>
                <div class="form-group">
                    <input local_var="txt_pwd" type="password" class="form-control" placeholder="密码"/>
                </div>
                <div class="form-group">
                    <select local_var="txt_gender" class="form-control" placeholder="性别">
                        <option value="1">男</option>
                        <option value="0">女</option>
                    </select>
                </div>
                <div class="form-group">
                    <input local_var="txt_age" type="number" class="form-control" placeholder="年龄"/>
                </div>
                <div class="form-group">
                    <select local_var="txt_usertype" class="form-control" placeholder="用户类型">
                        <option value="RENTER">租客</option>
                        <option value="LAND_LORD">房东</option>
                    </select>
                </div>
                <div class="form-group">
                    <button local_var="btn_signup" type="button" class="btn btn-primary">注册</button>
                </div>
                <div class="form-group">
                    <button local_var="btn_signin" type="button" class="btn btn-brightgreen">已有账号，去登录</button>
                </div>
                <div class="form-group text-center" local-id="div-msg"></div>
            </div>
        </div>
    </html>
    <runnable>
        <![CDATA[
            require(['pages/signup'], function(a){
                a.init(jxhl$container, jxhl$arguments, jxhl$localVars);
            });
        ]]>
    </runnable>
</jxhl>